{
  "appId": "com.chatapp.mobile",
  "appName": "ChatApp",
  "webDir": "dist",
  "server": {
    "androidScheme": "https"
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 3000,
      "backgroundColor": "#ffffff",
      "showSpinner": true,
      "spinnerColor": "#000000"
    },
    "StatusBar": {
      "style": "dark"
    },
    "Camera": {
      "permissions": ["camera", "photos"]
    },
    "Filesystem": {
      "permissions": ["storage"]
    },
    "Contacts": {
      "permissions": ["contacts"]
    }
  }
}
